                    }
                },
                "type": "object"
            },
            "Organization": {
                "title": "Organization",
                "description": "Сущность организации",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "example": "ООО \"Рога и Копыта\""
                    },
                    "building": {
                        "$ref": "#/components/schemas/Building"
                    },
                    "phones": {
                        "type": "array",
                        "items": {
