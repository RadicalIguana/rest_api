{
    "openapi": "3.0.0",
    "info": {
        "title": "API v1 Documentation",
        "description": "Документация для API версии 1",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "/api/v1",
            "description": "Основной сервер API v1"
        }
    ],
    "paths": {
        "/api/v1/activities": {
            "post": {
                "tags": [
                    "Activities"
                ],
                "summary": "Создать новую деятельность",
                "operationId": "a4bcc37a677c42ef4c818699823ab5d3",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "Молочная продукция"
                                    },
                                    "parent_id": {
                                        "type": "integer",
                                        "example": 1,
                                        "nullable": true
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Деятельность успешно создана",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "success"
                                        },
                                        "data": {
                                            "$ref": "#/components/schemas/Activity"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid input or nesting level exceeded"
                    },
                    "404": {
                        "description": "Parent activity not found"
                    }
                }
            }
        },
        "/api/v1/locations/nearby": {
            "get": {
                "tags": [
                    "Location"
                ],
                "summary": "Получить организации и здания в пределах заданного радиуса от точки",
                "operationId": "150e2c6781e38113292ae1e10183c0e1",
                "parameters": [
                    {
                        "name": "lat",
                        "in": "query",
                        "description": "Широка центральной точки",
                        "required": true,
                        "schema": {
                            "type": "number",
                            "format": "double"
                        }
                    },
                    {
                        "name": "lng",
                        "in": "query",
                        "description": "Долгота центральной точки",
                        "required": true,
                        "schema": {
                            "type": "number",
                            "format": "double"
                        }
                    },
                    {
                        "name": "radius",
                        "in": "query",
                        "description": "Радиус в километрах",
                        "required": true,
                        "schema": {
                            "type": "number",
                            "format": "double"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Список организаций и зданий в пределах радиуса",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "success"
                                        },
                                        "data": {
                                            "properties": {
                                                "organizations": {
                                                    "type": "array",
                                                    "items": {
                                                        "$ref": "#/components/schemas/Organization"
                                                    }
                                                },
                                                "buildings": {
                                                    "type": "array",
                                                    "items": {
                                                        "$ref": "#/components/schemas/Building"
                                                    }
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Radius is required or invalid coordinates"
                    }
                }
            }
        },
